{
    "identifier": "org.lkellar.JSONFormatter",
    "name": "JSON Formatter",
    "organization": "Lucas Kellar",
    "description": "Format JSON using the JSONLint Formatter",
    "version": "2020.4",
    "categories": ["formatters"],
    "license": "MIT",
    "repository": "https://github.com/katzrkool/nova-jsonformatter",
    "bugs": "https://github.com/katzrkool/nova-jsonformatter/issues",
    
    "main": "main.js",
    
    "config": [
        {
            "key": "org.lkellar.JSONFormatter.indent-size",
            "title": "Indent Size",
            "description": "How many spaces to use for each indent",
            "type": "number",
            "required": true,
            "default": 4
        }
    ],
    
    "commands": {
        "editor": [
            {
                "title": "Format JSON",
                "command": "org.lkellar.JSONFormatter.formatJSON",
                "filters": {
                    "syntaxes": ["json"]
                }
            }
        ]
    }
}
